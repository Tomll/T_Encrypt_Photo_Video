            <RelativeLayout
                android:id="@+id/rv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                >

                <Switch
                    android:id="@+id/switch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/iv_homekey_exit_app"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@mipmap/set_exit"/>

                <TextView
                    android:id="@+id/tv_homekey_exit_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/iv_homekey_exit_app"
                    android:text="@string/fast_exit"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_homekey_exit_app"
                    android:layout_toEndOf="@id/iv_homekey_exit_app"
                    android:layout_toStartOf="@id/switch4"
                    android:text="@string/fast_exit_when_press_home_key"
                    android:textColor="@color/greyline"
                    android:textSize="12sp"/>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/other_settings"
                android:textColor="@color/colorAccent"/>

            <RelativeLayout
                android:id="@+id/rv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                >

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@mipmap/set_change_pwd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv4"
                    android:text="@string/change_private_mark"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
